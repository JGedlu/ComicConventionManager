@{
    ViewData["Title"] = "Dashboard";
}

<h1>Convention Dashboard</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card p-3">
            <h3>View Panels</h3>
            <p>Browse upcoming convention panels.</p>
            <a asp-controller="Panel" asp-action="Index" class="btn btn-primary">
                Browse Panels
            </a>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card p-3">
            <h3>Featured Guests</h3>
            <p>See which guests are attending.</p>
            <a asp-controller="Guest" asp-action="Index" class="btn btn-secondary">
                Browse Guests
            </a>
        </div>
    </div>
</div>