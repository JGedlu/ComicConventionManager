<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Comic Convention</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ComicConventionManager.styles.css" asp-append-version="true" />
</head>
<body class="main-background">
    <header class="top-bar">
        <div class="top-left">
            <img src="~/images/logo.png" class="logo" />
            <span class="site-title">Comic Convention</span>
        </div>

        <div class="top-right">
            <a href="#" class="top-link">My Schedule (Must be logged in)</a>
            <a href="#" class="top-link">Login</a>
        </div>
    </header>

    <div class="page-content">
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
